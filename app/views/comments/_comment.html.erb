<tr>
  <td width="10%">
    <div class="comment-avatar">
      <%= image_tag comment.user.avatar.url(:comment) %><br>
      <small id="user-comment-name"><%= comment.user.username %></small> <br>
      <small id="user-comment-count">comments: <%= comment.user.comments.count %></small>
    </div>
  </td>
  <td class="comment-text">
    <small id="comment-timestamp">Posted <%= time_ago_in_words(comment.created_at) %> ago on <%= comment.created_at.to_date %></small>
    <%= comment.comment_text %>
  </td>
  <% if user_signed_in? && current_user.id == comment.user_id%>
    <td class="comment-controls comment-voting-area">
      <%= link_to '(edit)', edit_post_comment_path(@post, comment) %>
      <%= link_to '(delete)', post_comment_path(@post, comment),
                              :data => {:confirm => 'Are you sure?',
                              :method => 'delete' } %>
    </td>
  <% elsif user_signed_in? %>
    <td class="comment-controls comment-voting-area">

      <%= link_to post_comment_vote_path(@post, comment, upvote: true), method: 'post' do %>
        <span class='glyphicon glyphicon-arrow-up'></span>
      <% end %>

      <br>

      <%= comment.total_score %> |
      <%= comment.up_votes %> /
      <%= comment.down_votes %>

      <br>

      <%= link_to post_comment_vote_path(@post, comment, upvote: false), method: 'post' do %>
        <span class='glyphicon glyphicon-arrow-down'></span>
      <% end %>

    </td>
  <% else %>
    <td width="10%" align="center">
      <span class="label label-default"><%= comment.total_score %></span>
    </td>
  <% end %>
</tr>
