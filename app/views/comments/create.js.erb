$("#new_comment").on('ajax:success', function(data, response) {
  var pathName = window.location.pathname
  console.log(pathName);
  $.get( pathName, function( data ) {
    var html = data
    console.log(html);
    var commentSection = $(html).find("#all-comments");
    $("#all-comments").replaceWith(commentSection);
  });
});
