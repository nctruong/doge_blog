<%= render('layouts/errors', :object => @comment) %>
<div class="well">
  <%= form_for [@post, @comment] do |f| %>
    <div class="form-group">
      <%= f.label :user_name, 'User Name' %>
      <%= f.text_field :user_name, :placeholder => 'User Name', :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :comment_text, 'Comment Text' %>
      <%= f.text_area :comment_text, rows: 5, :placeholder => 'Enter Comment', :class => 'form-control' %>
    </div>
    <%= f.submit :class => 'btn btn-success' %>
  <% end %>
</div>
