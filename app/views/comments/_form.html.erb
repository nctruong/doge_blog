<%= render('layouts/errors', :object => @comment) %>
<div class="well well-sm" id="new_comment_form">
  <%= form_for [@post, @comment], remote: true do |f| %>
    <div class="form-group">
      <%= f.label :comment_text, 'Comment Text', class: 'small' %>
      <%= f.text_area :comment_text, rows: 3, :placeholder => 'Enter Comment', :class => 'form-control' %>
    </div>
    <%= f.submit :class => 'btn btn-success btn-xs', id: 'create-comment-button' %>
  <% end %>
  <button id="just_kidding" class="btn btn-danger btn-xs">Just Kidding</button>
</div>
