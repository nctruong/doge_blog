<% if user_signed_in? %>
  <%= image_tag current_user.avatar.url(:thumb) %>
  <h4>Hello <%= current_user.username %>! </h4>
<% end %>

<% if @posts.any? %>
<h5>Doge Thoughts</h5>
  <ol>
    <% @posts.each do |post| %>
      <li> <%= link_to post.title, post_path(post) %> Posted By: <%= post.user.username %>
        <% if user_signed_in? && current_user.id == post.user_id %>
          <small><%= link_to '(delete)', post_path(post),
                                        :data => {:confirm => 'Are you sure?',
                                        :method => 'delete' } %></small>
        <% end %>
      </li>
    <% end %>
  </ol>
<% else %>
  <h5>Wow Such Empty!</h5>
<% end %>

<hr>

<% if user_signed_in? %>
  <%= link_to "Make Post", new_post_path, class: 'btn btn-success btn-md' %>
<% end %>
