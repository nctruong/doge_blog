<div class="row">
  <div class="col-md-12">
    <table class="table-condensed main-posts-table" width="100%">
      <tr>
        <td width="10%">
          <%= image_tag post.user.avatar.url(:thumb), class: 'title-avatar-posts-index' %>
          <small> <%= post.user.username %> </small>
        </td>
        <td class="main-posts-text">
          <h4 id="post-title-header"><%= link_to post.title, post_path(post) %> </h4>
          <p id="post-title-date">Posted on <%= post.created_at.to_date %></p>
          <span class="label label-info"> <%= post.comments.count %> Comments </span>
        </td>
        <td width="10%">
          <span class="badge big-text"> <%= post.total_score %> </span>
        </td>
      </tr>
    </table>
  </div>
</div>
