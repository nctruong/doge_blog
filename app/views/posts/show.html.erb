<div class="row">
  <div class="col-md-12">
    <table width="100%">
      <tr>
        <td width="8%">
          <%= image_tag @post.user.avatar.url(:thumb), class: 'title-avatar' %>
        </td>
        <td width="82%">
          <h3 id="post-title-header">Post Title: <%= @post.title %></h3>
          <h4 id="post-title-date">Posted <%= time_ago_in_words(@post.created_at) %> ago on <%= @post.created_at.to_date %></h4>
        </td>
        <td width="10%">
          <% if user_signed_in? && current_user.id == @post.user_id %>
            <%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', post_path(@post),
                                  :data => {:confirm => 'Are you sure?',
                                  :method => 'delete' }, :class => 'btn btn-danger btn-sm' %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-12">
    <div class="post-text">
      <p> <%= simple_format(@post.post_text)%> </p>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12">
        <h4 id="comments-title-heading"><%= @post.comments.count %> Comments </h4>
        <% if user_signed_in? %>
          <%= link_to 'Add Comment', new_post_comment_path(@post),
          :class => 'h4',
          id: "new_comment_link", remote: true %>
        <% end %>
      </div>
    </div>
    <% if @post.comments.any? %>
      <div class="well well-sm">
        <table id="current_comments" class="table table-bordered">
          <%= render @post.comments.order('created_at ASC') %>
        </table>
      </div>
    <% else %>
      <h6 id="comment_empty">Speak!</h6>
    <% end %>
  </div>
</div>

<hr>

<%= link_to 'Back', posts_path, :class => 'btn btn-primary' %>
