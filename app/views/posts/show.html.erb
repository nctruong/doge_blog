<table>
  <tr>
    <td>
      <%= image_tag @post.user.avatar.url(:thumb), class: 'title-avatar' %>
    </td>
    <td>
      <h3 id="post-title-header">Post Title: <%= @post.title %></h3>
      <h4 id="post-title-date">Posted <%= time_ago_in_words(@post.created_at) %> ago on <%= @post.created_at.to_date %></h4>
    </td>
  </tr>
</table>

<hr>

<div class="container row">
  <p><%= @post.post_text %> </p>

  <% if user_signed_in? && current_user.id == @post.user_id %>
    <%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-primary' %>
    <%= link_to 'Delete', post_path(@post),
                          :data => {:confirm => 'Are you sure?',
                          :method => 'delete' }, :class => 'btn btn-danger' %>
  <% end %>
</div>

<hr>

<div class="well well-sm comments">
  <div class="comments-title-container">
    <h4 id="comments-title-heading">Comments For: <%= @post.title %> </h4>
    <% if user_signed_in? %>
      <%= link_to 'Add Comment', new_post_comment_path(@post),
      :class => 'btn btn-primary btn-sm',
      id: "new_comment_link", remote: true %>
    <% end %>
  </div>

  <table id="current_comments" class="table table-bordered">
    <%= render @post.comments.order('created_at ASC') %>
  </table>

  <% if @post.comments.none? %>
    <h6 id="comment_empty">Be The First To Comment!</h6>
  <% end %>
</div>

<hr>

<%= link_to 'Back', posts_path, :class => 'btn btn-primary' %>
