<%= render 'layouts/errors', :object => @post %>

<div class="well">
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Post Title' %>
      <%= f.text_field :title, :placeholder => 'Such title', :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :post_text, 'Post Text' %>
      <%= f.text_area :post_text, rows: 20, :placeholder => 'Enter text and markup', :class => 'form-control' %>
    </div>
    <%=f.submit :class => 'btn btn-success' %>
  <% end %>
</div>
