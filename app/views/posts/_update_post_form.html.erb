<%= render 'layouts/errors', :object => @post %>

<div class="well" id="post-form">
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Post Title' %>
      <%= f.text_field :title, :placeholder => 'Such title', :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :post_text, 'Post Text' %>
      <%= f.text_area :post_text, rows: @post.post_text.lines.count, wrap: 'hard', :placeholder => 'Enter text and markup', :class => 'form-control' %>
    </div>
    <%=f.submit :class => 'btn btn-success btn-sm pull-left', id: "update-post-button" %>
  <% end %>
  <button id="cancel-post-update-<%= @post.id %>" class="btn btn-danger btn-sm"> Cancel </button>
</div>
